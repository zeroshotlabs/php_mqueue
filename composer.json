{
    "name": "zeroshotlabs/php_mqueue",
    "description": "Speed-optimized PHP FFI bindings for POSIX message queues.",
    "keywords": ["mqueue", "message queue", "posix", "ffi", "binding", "pmq"],
    "license": "gpl-3.0-or-later",
    "homepage": "https://zsl.ai",
    "type": "library",
    "authors": [
        {
            "name": "Zero Shot Labs, Inc.",
            "email": "opensource@zsl.ai"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/zeroshotlabs/php_mqueue.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "@clean_build"
        ],
        "post-update-cmd": [
            "@clean_build"
        ],
        "clean_build": "PHP_CONFIG=${PHP_CONFIG:-$(which php-config 2>/dev/null)} && [ -n \"$PHP_CONFIG\" ] || { echo 'Error: php-config not found' >&2; exit 1; } && make clean build"
    },
    "require": {
        "php": ">=8.3",
        "ext-ffi": "*",
        "zeroshotlabs/libphphi": "*"
    },
    "autoload": {
        "files": [
            "./header.inc"
        ]
    },    
    "minimum-stability": "dev",
    "prefer-stable": true
}

